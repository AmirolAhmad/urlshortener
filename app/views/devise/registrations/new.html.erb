<div class="ui grid login-form">
  <div class="five wide column"></div>
  <div class="six wide column">

    <div class="ui attached blue message">
      <div class="header">
        WELCOME TO THE OSEM URL SHORTENER!
      </div>
      <p>Fill out the form below to sign-up for a new account</p>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui form attached fluid segment"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <%= f.submit "Create My Account", class: "ui blue submit button" %>
    <% end %>
    <div class="ui bottom attached message">
      <%= render "devise/shared/links" %>
    </div>

  </div>
  <div class="five wide column"></div>
</div>